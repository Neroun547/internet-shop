<!-- Modal -->
<div class="modal modal-lg fade" id="images-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body" style="padding: 40px;">
        <div id="carouselExampleIndicators" class="carousel slide" style="position: relative;">
          <div class="carousel-inner" id="wrapper__images-carousel">
            {{#each images}}
              <div class="carousel-item">
                <img src="/images/{{this}}" class="d-block w-100" alt="Зображення">
              </div>
            {{/each}}
          </div>
        </div>
        {{#if moreThenOneImage}}
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" style="position: absolute; left: 0;" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" style="position: absolute; right: 0;" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        {{/if}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" style="background-color: #f8b71d; border: none; color: #000" data-bs-dismiss="modal">Закрити</button>
      </div>
    </div>
  </div>
</div>



<div class="wrapper__product">
  <div class="wrapper__product-images">
    {{#each images}}
      <div class="wrapper__product-images-image" style="background-image: url('/images/{{this}}')" data-bs-toggle="modal"  data-bs-target="#images-modal"></div>
    {{/each}}
    <button class="arrow-left">
      <span>&#8592;</span>
    </button>
    <button class="arrow-right">
      <span>&#8594;</span>
    </button>
  </div>
  <div class="wrapper__product-content">
    <h2 class="wrapper__product-content-item">{{global_price}}: {{price}} грн</h2>
    <h2 class="wrapper__product-content-item">{{global_product_type}}: {{type}}</h2>
    {{#if available}}
      <h2 class="wrapper__product-content-item">{{global_available}}</h2>
    {{else}}
      <h2 class="wrapper__product-content-item">{{global_not_available}}</h2>
    {{/if}}
    {{#if partner}}
      <strong class="product-from-partner-or-admin mt-20">Товар від партнера Zolotar</strong>
    {{else}}
      <strong class="product-from-partner-or-admin mt-20">Товар від Zolotar</strong>
    {{/if}}
    {{#if inBasket}}
      <button class="wrapper__product-add-to-basket-btn" style="background-color: #eee; color: #000; cursor: initial;">
        <strong>{{global_already_in_basket}}</strong>
      </button>
    {{else}}
      <button class="wrapper__product-add-to-basket-btn" id="add-to-basket-btn" data-product="{{id}}">
        <strong>{{global_add_to_basket}}</strong>
      </button>
      <button class="wrapper__product-buy-now-btn" id="buy-now-btn" data-product="{{id}}">
        <strong>Придбати зараз</strong>
      </button>
    {{/if}}
  </div>
</div>
<div class="wrapper__sub-images">
  {{#each images}}
    <div class="wrapper__sub-images-item">
      <img src="/images/{{this}}" alt="Зображення">
    </div>
  {{/each}}
</div>

{{#if description}}
  <div class="wrapper__description">
      <div class="wrapper__product-description">
        {{#if translateDescription}}
          {{translateDescription}}
        {{else}}
          {{description}}
        {{/if}}
      </div>
  </div>
{{/if}}

