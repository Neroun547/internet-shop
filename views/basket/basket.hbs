<div class="wrapper__products">
    {{#if products}}
        <h2 class="basket-logo">Товари у Вашому кошику: </h2>
        {{#each products}}
            <div class="wrapper__products-item" data-price="{{this.price}}" data-name="{{this.name}}" id="{{this.id}}">
                <img src="/images/{{this.file_name}}" alt="{{this.name}}">
                <div class="wrapper__products-item-name">
                    {{this.name}}
                </div>
                <div class="wrapper__products-item-price">
                    <string>{{this.price}} грн</string>
                </div>
                <div class="wrapper__products-item-count">
                    <label for="count-product">Кількість: </label>
                    <input type="number" value="1" min="1" step="1" id="count-product" class="count-product-input" data-name="{{this.name}}" data-price="{{this.price}}" data-idProduct="{{this.id}}" required>
                </div>
                <a href="/products/{{this.id}}" class="wrapper__products-item-link">
                    <button class="wrapper__products-item-link-about-btn">Детальніше</button>
                </a>
                <button class="wrapper__products-item-remove" data-product="{{this.id}}" data-price="{{this.price}}">Прибрати з кошика</button>
            </div>
        {{/each}}
        <h2 class="sum-products">Всього: <strong class="sum-products-value">{{sum}}</strong> грн</h2>
    {{else}}
        <h2>Кошик пустий</h2>
    {{/if}}
</div>
{{#if products}}
<h3 class="buy-form-description">Заповніть форму для завершення замовлення</h3>

<form class="buy-form" id="buy-form">
    <div class="wrapper__buy-form-radio">
        <p>
            <strong>Як до вас звертатися ?</strong>
        </p>
        <input type="text" placeholder="Ваше ім'я:" id="first_name" required>
        <input type="text" placeholder="Ваше прізвище:" id="last_name" required>
        <p>
            <strong>Як з вами зв'язатися ?</strong>
        </p>
        <input type="radio" id="contact-phone"
               name="contact" value="contact-phone" checked>
        <label for="contact-phone">Телефон</label>
        <input type="text" id="contact-phone-input" placeholder="Телефон:">

        <input type="radio" id="contact-email"
               name="contact" value="email">
        <label for="contact-email">Електронна пошта</label>
        <input type="email" id="contact-email-input" placeholder="Електронна пошта:">


        <input type="radio" id="contact-another"
               name="contact" value="contact-another">
        <label for="contact-another">Інший спосіб (WhatsApp, Viber, Telegram і т.д)</label>
        <input type="text" id="contact-another-input" placeholder="Інше:">

        <input type="text" id="contact-remark" placeholder="Примітка, додаткова інформація:">
    </div>
    <button type="submit">Замовити</button>
</form>
{{/if}}

