<div class="wrapper__order">
    <h2>Замовлення: </h2>
    {{#each order}}
        <div class="wrapper__order-item">
            <div class="wrapper__order-item-name">Назва: {{this.product.name}}</div>
            <div class="wrapper__order-item-type">Тип: {{this.product.type}}</div>
            <div class="wrapper__order-item-price">Ціна: {{this.product.price}}</div>
            <div class="wrapper__order-item-count">Кількість: {{this.count}}</div>
        </div>
    {{/each}}
    <div class="wrapper__order-all-sum">Загальна сума замовлення: {{all_sum}}</div>
    <div class="wrapper__order-contact-info">Контактна інформація клієнта: {{contact_info}}</div>

    {{#if complete}}
        <button class="wrapper__order-done-btn" style="background-color: #fff; color: #000;">Вже виконано</button>
    {{else}}
        <button class="wrapper__order-done-btn" data-idOrder="{{idOrder}}">Позначити як виконане</button>
    {{/if}}
    <button class="wrapper__order-delete-btn" data-idOrder="{{idOrder}}">Видалити замовлення</button>
</div>
