<div class="wrapper__page">
  <div class="wrapper__selected">
    <div class="wrapper__selected-images">

    </div>
    <div class="wrapper__selected-btn">
      <button class="wrapper__selected-left">&#8592;</button>
      <button class="wrapper__selected-right">&#8594;</button>
    </div>
  </div>
  <form class="upload__product-form">
    <input type="file" multiple name="files" id="files__input">
    <input type="text" placeholder="Назва товару:" name="name" required>
    <input type="text" placeholder="Опис товару:" name="description">
    <input type="number" step="0.01" placeholder="Ціна товару:" name="price" required>

    <label for="translate-language-title" class="mt-20">Мова перекладу назви:</label>
    <select id="translate-language-title">
      <option value="en" selected>Англійська</option>
    </select>
    <input type="text" placeholder="Переклад назви:">

    <label for="translate-language-description" class="mt-20">Мова перекладу опису:</label>
    <select id="translate-language-description">
      <option value="en">Англійська</option>
    </select>
    <input type="text" placeholder="Переклад опису:">

    <label for="rubrics-select" class="mt-20">Рубрика товару:</label>
    <select type="text" id="rubrics-select">
      <option value="{{selectedRubric.id}}" selected>{{selectedRubric.name}}</option>
      {{#each rubrics}}
        <option value="{{this.id}}">{{this.name}}</option>
      {{/each}}
    </select>

    <label for="product-type" class="mt-20">Тип товару:</label>
    <select name="type" id="product-type">
      <option value="Сережки">Сережки</option>
      <option value="Підвіски">Підвіски</option>
      <option value="Дукачі">Дукачі</option>
      <option value="Браслети">Браслети</option>
      <option value="Комплекти">Комплекти</option>
      <option value="Інше">Інше</option>
    </select>

    <label for="available" style="margin-top: 50px">Є в наявності ?</label>
    <input type="checkbox" id="available" style="margin: 0; width: min-content;" name="available">
    <button type="submit">Додати товар</button>
  </form>
</div>

