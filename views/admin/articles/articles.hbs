<div class="wrapper__page">
  <a href="/admin/articles/upload-article">
    <button class="upload__article-button">
      Завантажити статтю
    </button>
  </a>

  <div class="wrapper__articles">
    {{#if articles}}
      {{#each articles}}
        <div class="wrapper__articles-item">
          <div class="wrapper__articles-item-name">
            Назва статті: {{this.name}}
          </div>
          <div class="wrapper__articles-item-theme">
            Тема статті: {{this.theme}}
          </div>
          <div class="wrapper__articles-item-authors">
            Автори: {{this.authors}}
          </div>
          <div class="wrapper__articles-item-date">
            Дата завантаження: {{this.created_at}}
          </div>
          <a href="/admin/articles/edit/{{this.filename}}" class="wrapper__articles-item-edit-link">
            <button>Редагувати/читати</button>
          </a>
          <button class="wrapper__articles-item-del-btn" id="{{this.filename}}">Видалити статтю</button>
        </div>
      {{/each}}
      {{#if loadMore}}
        <button class="load-more-articles-btn">Завантажити більше</button>
      {{/if}}
    {{else}}
      <div class="wrapper__articles-no-articles">
        Ще немає статтей
      </div>
    {{/if}}
  </div>
</div>

