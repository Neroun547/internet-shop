<!doctype html>
<html lang="en">
    {{> head}}
<body>
<div class="wrapper__filter">
    {{> top-bar}}

    {{#if admin}}
        <div class="wrapper__content">
            <div class="wrapper__content-content">{{{body}}}</div>
        </div>
    {{else}}
        <div class="wrapper__content">
            <div class="wrapper__content-left-bar-menu">
                <a href="/" class="wrapper__content-menu-item">Всі товари</a>
                <a href="/products/by-type/earrings" class="wrapper__content-menu-item">Сережки</a>
