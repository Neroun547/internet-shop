<!doctype html>
<html lang="en">
    {{> head}}
<body>
<div class="wrapper__filter">

    {{#if admin}}
        <div class="wrapper__content-admin">
          <div class="wrapper__nav-bar-left-admin">
            <nav>
              <a href="/admin/products/upload-product">
                Товари
              </a>
              <a href="/admin/orders">
                Замовлення
              </a>
              <a href="/admin/products/">
                Весь товар
              </a>
              {{#if partner}}

              {{else}}
                <a href="/admin/articles">
                  Статті
                </a>
              {{/if}}

              {{#if partner}}
              {{else}}
                <a href="/admin/video-photo-gallery">
                  Відео, фото галерея
                </a>
              {{/if}}
              {{#if partner}}

              {{else}}
                <a href="/admin/support">
                  Підтримка
                </a>
              {{/if}}
              {{#if partner}}

              {{else}}
                <a href="/admin/statistics">
                  Сатистика
                </a>
              {{/if}}
              {{#if partner}}

              {{else}}
                <a href="/admin/partners">
                  Партнери
                </a>
              {{/if}}

              {{#if partner}}

              {{else}}
                <a href="/admin/rubrics">
                  Рубрики
                </a>
              {{/if}}
            </nav>
          </div>
          <div class="wrapper__content-content-admin">{{{body}}}</div>
        </div>
    {{else}}
      {{> top-bar}}
        {{#if filtersMenuItems}}
          <div class="wrapper__content">
            <div class="wrapper__content-left-bar-menu">
              <a href="/products/by-rubrics/{{rubric_id}}" class="wrapper__content-menu-item">{{global_all_products}}</a>
              {{#each filtersMenuItems}}
                <a href="/products/by-type/{{this.id}}?rubricId={{rubric_id}}" class="wrapper__content-menu-item">
                  {{this.name}}
                </a>
              {{/each}}
              <a href="/basket?rubricId={{rubric_id}}" class="wrapper__content-menu-item">{{global_basket}}</a>
              <a href="/video-photo-gallery?rubricId={{rubric_id}}" class="wrapper__content-menu-item">{{global_gallery}}</a>
              <a href="/articles?rubricId={{rubric_id}}" class="wrapper__content-menu-item">{{global_articles}}</a>
              <a href="/support?rubricId={{rubric_id}}" class="wrapper__content-menu-item">{{global_support}}</a>
            </div>
            <div class="wrapper__content-content">{{{body}}}</div>
          </div>
        {{else}}
          <div class="wrapper__content">
            <div class="wrapper__content-left-bar-menu">
              <a href="/" class="wrapper__content-menu-item">{{global_all_products}}</a>
              <button class="wrapper__content-menu-item-show-rubrics-btn">
                <span class="wrapper__content-menu-item-show-rubrics-btn-text">{{global_rubrics}}</span>
                <span class="wrapper__content-menu-item-show-rubrics-btn-symbol">&#8743;</span>
              </button>
              <div class="wrapper__rubrics-list"></div>
              <a href="/basket" class="wrapper__content-menu-item">{{global_basket}}</a>
              <a href="/video-photo-gallery" class="wrapper__content-menu-item">{{global_gallery}}</a>
              <a href="/articles" class="wrapper__content-menu-item">{{global_articles}}</a>
              <a href="/support" class="wrapper__content-menu-item">{{global_support}}</a>
            </div>
            <div class="wrapper__content-content">{{{body}}}</div>
          </div>
        {{/if}}
    {{/if}}
    <div class="wrapper__cookie-info">
      <span>{{global_cookie}}
        <a href="https://uk.wikipedia.org/wiki/%D0%9A%D1%83%D0%BA%D0%B8">{{global_more_about_cookie}}</a>
      </span>
    </div>
</div>
{{#if admin}}

{{else}}
    <script src="/js/main.js" type="module"></script>
{{/if}}

{{#each scripts}}
    <script src="{{this}}" type="module"></script>
{{/each}}
</body>
</html>
