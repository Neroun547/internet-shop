<!doctype html>
<html lang="en">
    {{> head}}
<body>
<div class="wrapper__filter">
    {{> top-bar}}

    {{#if admin}}
        <div class="wrapper__content">
            <div class="wrapper__content-content">{{{body}}}</div>
        </div>
    {{else}}
        <div class="wrapper__content">
            <div class="wrapper__content-left-bar-menu">
                <a href="/" class="wrapper__content-menu-item">{{global_all_products}}</a>
                <a href="/products/by-type/earrings" class="wrapper__content-menu-item">{{global_earrings}}</a>
                <a href="/products/by-type/dukachi" class="wrapper__content-menu-item">{{global_dukachi}}</a>
                <a href="/products/by-type/suspensions" class="wrapper__content-menu-item">{{global_suspensions}}</a>
                <a href="/products/by-type/bracelets" class="wrapper__content-menu-item">{{global_bracelets}}</a>
                <a href="/products/by-type/sets" class="wrapper__content-menu-item">{{global_sets}}</a>
                <a href="/products/by-type/another" class="wrapper__content-menu-item">{{global_another}}</a>
                <a href="/basket" class="wrapper__content-menu-item">{{global_basket}}</a>
                <a href="/video-photo-gallery" class="wrapper__content-menu-item">{{global_gallery}}</a>
                <a href="/articles" class="wrapper__content-menu-item">{{global_articles}}</a>
                <a href="/support" class="wrapper__content-menu-item">{{global_support}}</a>
            </div>
            <div class="wrapper__content-content">{{{body}}}</div>
        </div>
    {{/if}}
    <div class="wrapper__cookie-info">
      <span>{{global_cookie}}
        <a href="https://uk.wikipedia.org/wiki/%D0%9A%D1%83%D0%BA%D0%B8">{{global_more_about_cookie}}</a>
      </span>
    </div>
</div>
{{#if admin}}

{{else}}
    <script src="/js/main.js" type="module"></script>
{{/if}}

{{#each scripts}}
    <script src="{{this}}" type="module"></script>
{{/each}}
</body>
</html>
