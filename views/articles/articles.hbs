{{#if articles}}
    <div class="wrapper__articles">
        {{#each articles}}
            <div class="wrapper__articles-item">
                <div class="wrapper__articles-item-name">Назва статті: {{this.name}}</div>
                <div class="wrapper__articles-item-theme">Тема: {{this.theme}}</div>
                <div class="wrapper__articles-item-authors">Автори: {{this.authors}}</div>
                <div class="wrapper__articles-item-date">Дата публікації: {{this.created_at}}</div>
                <a href="/articles/{{this.filename}}" class="wrapper__articles-item-read-article-link">
                    <button>Читати статтю</button>
                </a>
            </div>
        {{/each}}
    </div>

    {{#if loadMore}}
        <button class="load-more-articles-btn">Завантажити більше</button>
    {{/if}}
{{else}}
    <h2 class="no-articles-logo">Статтей поки що немає</h2>
{{/if}}
