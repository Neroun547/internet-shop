<div class="wrapper__logo">
    {{#if admin}}
        <a href="/admin/auth/exit">
            <button class="exit__btn">Вийти</button>
        </a>
        <a href="/admin" class="link-to-main-page">Головна</a>
    {{else}}
        <button class="wrapper__logo-open-menu">
            <div class="wrapper__logo-open-menu-decoration-1"></div>
            <div class="wrapper__logo-open-menu-decoration-2"></div>
            <div class="wrapper__logo-open-menu-decoration-3"></div>
        </button>
        <h2 class="main-logo">Zolotar</h2>
        {{#if (equals activeLanguage "en")}}
          <select name="language-select" id="language-select">
            <option value="uk">Ukrainian</option>
            <option value="en" selected>English</option>
          </select>
        {{else}}
          <select name="language-select" id="language-select">
            <option value="uk" selected>Ukrainian</option>
            <option value="en">English</option>
          </select>
        {{/if}}
        <a href="/basket?rubricId={{rubric_id}}">
            <img src="/icons/basket.png" alt="Кошик" class="basket-icon">
        </a>
        <a href="https://www.facebook.com/zolotar.ua" target="_blank">
            <img src="/icons/facebook.png" alt="facebook" class="facebook-icon">
        </a>
        <a href="https://www.instagram.com/zolotar_shop_ua/" target="_blank">
            <img src="/icons/instagram.png" alt="instagram" class="instagram-icon">
        </a>
    {{/if}}
</div>
